{
    "info": {
        "name": "CodeBazaar API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api"
        },
        {
            "key": "token",
            "value": ""
        },
        {
            "key": "projectId",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Auth - Register",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": "{{baseUrl}}/auth/register",
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"John\",\n  \"email\": \"john@example.com\",\n  \"password\": \"Strong@1234\",\n  \"role\": \"creator\"\n}"
                }
            }
        },
        {
            "name": "Auth - Login",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": "{{baseUrl}}/auth/login",
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"Strong@1234\"\n}"
                }
            }
        },
        {
            "name": "Projects - Get Approved",
            "request": {
                "method": "GET",
                "url": "{{baseUrl}}/projects?page=1&limit=10&techStack=mern&category=web&minPrice=0&maxPrice=5000"
            }
        },
        {
            "name": "Payments - Buy Project",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": "{{baseUrl}}/payments/buy",
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"projectId\": \"{{projectId}}\"\n}"
                }
            }
        },
        {
            "name": "Payments - Verify",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": "{{baseUrl}}/payments/verify",
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"projectId\": \"{{projectId}}\",\n  \"razorpayOrderId\": \"order_123\",\n  \"razorpayPaymentId\": \"pay_123\",\n  \"razorpaySignature\": \"signature\"\n}"
                }
            }
        },
        {
            "name": "Projects - Download Purchased",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": "{{baseUrl}}/projects/{{projectId}}/download"
            }
        }
    ]
}